{
  "name": "powerquery-language",
  "version": "1.0.0",
  "private": true,
  "description": "TextMate grammar files for Power Query / M language",
  "main": "build/build.js",
  "scripts": {
    "build": "npm run build:grammar && npm run build:tests",
    "build:grammar": "tsc -b build -v && node build/build.js",
    "build:tests": "tsc -b tests -v",
    "test": "mocha -r ts-node/register tests/**/*.ts"
  },
  "devDependencies": {
    "@types/chai": "latest",
    "@types/js-yaml": "latest",
    "@types/mocha": "latest",
    "@types/plist": "latest",
    "chai": "latest",
    "js-yaml": "latest",
    "mocha": "latest",
    "mocha-multi-reporters": "latest",
    "plist": "latest",
    "powerquery-parser": "latest",
    "ts-node": "^8.1.0",
    "typescript": "latest",
    "vscode-textmate": "^3.3.3"
  }
}
